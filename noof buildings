length = 10  # length of the building in meters
width = 8    # width of the building in meters
height = 5   # height of the building in meters
brick_length = 0.2  # length of a single brick in meters
brick_width = 0.1   # width of a single brick in meters
brick_height = 0.05 # height of a single brick in meters

# Calculation
building_volume = length * width * height
brick_volume = brick_length * brick_width * brick_height
bricks_required = building_volume / brick_volume

# Output
print("Amount of bricks required to build the building:", int(bricks_required))
